<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/iv_movie_details_poster"
            android:layout_width="match_parent"
            android:layout_height="250dp"
            android:background="@color/dark_grey"
            android:src="@drawable/test_image" />

        <TextView
            android:id="@+id/tv_movie_details_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:gravity="center"
            android:textColor="@color/black"
            android:textSize="24sp"
            android:textStyle="bold"
            tools:text="Title of Movie" />

        <TextView
            android:id="@+id/tv_movie_details_genres"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:gravity="center"
            android:textStyle="italic"
            tools:text="Genres, genres, genres, genres" />

        <TextView
            android:id="@+id/tv_movie_details_duration"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:gravity="center"
            android:textStyle="italic"
            tools:text="duration" />

        <TextView
            android:id="@+id/tv_movie_details_release_date"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:gravity="center"
            android:textStyle="italic"
            tools:text="release date" />

        <TextView
            android:id="@+id/tv_movie_details_storyline"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="25dp"
            android:layout_marginTop="5dp"
            android:layout_marginRight="25dp"
            android:layout_marginBottom="5dp"
            android:gravity="center"
            tools:text="storyline" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:textStyle="bold"
            tools:text="Actors:" />

        <TextView
            android:id="@+id/tv_movie_details_actors"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:gravity="center"
            tools:text="names of actors" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_margin="15dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_movie_details_average_rating"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center|end"
                android:textSize="20sp"
                android:textStyle="bold"
                tools:text="5.0" />

            <ImageView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_gravity="center|start"
                android:layout_weight="1"
                android:src="@drawable/ic_star" />

            <ImageView
                android:id="@+id/iv_movie_details_thumbs_up_or_down"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_margin="5dp"
                android:layout_weight="2"
                android:gravity="center" />


        </LinearLayout>

    </LinearLayout>


</androidx.core.widget.NestedScrollView>